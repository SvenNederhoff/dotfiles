#color	body		magenta		default  "((ftp|http|https)://|news:)[^ >)\"\t]+"
color	body		magenta		default  "<URL:[^>]+>|(finger|ftp|https?|news|telnet):[^ >)\"\t]+|www\\.([[:alnum:]][-.]?)+(:[[:digit:]]+)?(/[-_./~#[:alnum:]]*(\\?[^ >)\"\t]*)?)?"
