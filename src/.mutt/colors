#color	normal	 	white 		default	# normal text
color 	index  		cyan		default  "~N|~O"    # New
color 	index		yellow		default  ~D         # Deleted
color 	index		yellow		default  "~G~D"     # Deleted encrypted
color 	index		yellow		default  "~g~D"     # Deleted signed
color 	index		green		default  ~G         # Encrypted
color 	index		cyan		default  "~G~N"     # Encrypted new
color 	index		green		default  ~g         # Signed
color 	index		cyan 		default  "~g~N"     # Signed new
color	index		red		default	 ~F	    # Flagged
color	index		brightred	default	 "~F~N"	    # Flagged new
color	quoted		brightcyan  	default
color	quoted1		brightyellow  	default
color	hdrdefault 	cyan 	default
color	header		brightyellow	default	"^(From|To):"
color	header		brightgreen		default	"^(Subject|Date):"
color	sidebar_new	cyan		 default
color	error		red		default
color	signature	magenta		default
